<div id='ticket'>
<h2><%= @ticket.title %></h2>
<%= simple_format(@ticket.description) %>
	<% if @ticket.asset.exists? %>
		<h3>Attached File</h3>
		<div class="asset">
		<p>
			<%= link_to File.basename(@ticket.asset.path),
				@ticket.asset.url
			%>
		</p>
		<p><small><%= number_to_human_size(@ticket.asset.size) %>
			(<%= @ticket.asset.content_type %>)</small>
		</p>
	<% end %>
</div>
 
<%= authorized?("edit tickets", @Project) do %>
	<%= link_to "Edit Ticket", [:edit, @Project, @ticket] %>
<% end %>

<%= authorized?("delete tickets", @Project) do %>
	<%= link_to "Delete Ticket", [@Project, @ticket], :method => :delete,
		:confirm => "Are you sure you want to delete this ticket?" %>
<% end %>

<nav>
<%= link_to "Sign up", new_user_registration_path %>
</nav>


<br><small>Created by <%= @ticket.user.email %></small>
